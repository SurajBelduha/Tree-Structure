@using Task.ViewModel
@model NodeModel
@{
    ViewData["Title"] = "Update Node";
}

<form asp-action="Update">
    <input type="hidden" asp-for="NodeId" />
    <div class="form-group">
        <label asp-for="NodeName" class="control-label"></label>
        <input asp-for="NodeName" class="form-control" />
        <span asp-validation-for="NodeName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ParentNodeId" class="control-label"></label>
        <select asp-for="ParentNodeId" class="form-control" asp-items="ViewBag.ParentNodeId">
            <option value="0"> Select Parent Node</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="control-label"></label>
        <input asp-for="IsActive" class="form-checkbox" type="checkbox" />
    </div>
    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>
